---
const { title, description, icon } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <section class="flex items-center py-2 px-2">
      <div class="border rounded-lg bg-black h-40 w-full">
        <div
          class="flex items-center  py-2 px-4">
          <div
            class="mr-[18px] h-[44px] w-full max-w-[44px] overflow-hidden rounded-xl">
            <img
              src={icon.src}
              alt={title}
              class="h-full w-full object-cover object-center"
            />
          </div>
          <div>
            <h4 class="text-dark mb-1 text-sm font-semibold dark:text-white">
              {title}
            </h4>
            <p class="text-body-color dark:text-dark-6 text-sm font-medium">
              {description}
            </p>
          </div>
        </div>
      </div>
    </section>
    <slot />
  </body>
</html>